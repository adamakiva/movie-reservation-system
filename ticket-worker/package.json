    "@types/node": "~22.14.1",
    "dpdm": "~3.14.0",
    "eslint": "~9.24.0",
    "eslint-config-prettier": "~10.1.2",
    "eslint-plugin-security": "~3.0.1",
    "globals": "~16.0.0",
    "nlf": "~2.1.1",
    "npm-check-updates": "~17.1.18",
    "prettier": "~3.5.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "~8.30.1"
  },
  "engines": {
    "node": ">=22.7"
  },
